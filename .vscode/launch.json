{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "request": "launch",
      "name": "Launch Backend",
      "type": "node",
      "program": "${workspaceFolder}/management-system/backend/src/index.ts",
      "cwd": "${workspaceFolder}",
      "env": {},
      "envFile": "${workspaceFolder}/management-system/.env",
      "runtimeExecutable": "/opt/homebrew/bin/deno",
      "runtimeArgs": [
        "run",
        "--unstable",
        "--inspect-wait",
        "--allow-all"
      ],
      "attachSimplePort": 9229
    },
    {
      "name": "Debug Pico Firmware",
      // "preLaunchTask": "rust: cargo build",
      "type": "probe-rs-debug",
      "request": "launch",
      "flashingConfig": {
        "flashingEnabled": true,
      },
      "chip": "RP235x",
      "cwd": "${workspaceFolder}/pico-firmware",
      "coreConfigs": [
        {
          "rttEnabled": true,
          "programBinary": "${workspaceFolder}/pico-firmware/target/thumbv8m.main-none-eabihf/release/pico-2-embassy-test"
        }
      ],
      "consoleLogLevel": "Console",
    }
  ]
}